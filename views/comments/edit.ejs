 <% include ../partials/header %>

 <div class="container">
 	<div class="row">
 		<h1 style="text-align: center;">EDIT COMMENT FORM</h1>
 		<div style="width: 30%; margin: 30px auto;">
 			<form action="/coins/<%= coin_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">	
