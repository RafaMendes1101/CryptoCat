<% include partials/header %>


<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new Coin post</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/coins" method="POST">	
				<div class="form-group">	
					<input class="form-control" type="text" placeholder="coin name" name="name" accept=".jpg, .jpeg, .png">	
				</div>
				<div class="form-group">
					<label class="form-control" for="icon">Choose an icon to upload(PNG, JPG)</label>
				</div>
				<div class="form-group">
					<input class="form-control" type="file" name="icon" id="icon">
				</div>
				<div class="form-group">
					<button class="btn btn-lg upload-btn btn-block">Submit!</button>
				</div>
				<a href="/">Go Back</a>
			</div>
		</form>
	</div>
	<% include partials/footer %>
</div>
